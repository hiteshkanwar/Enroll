<div class="container" id="inbox_provider_form">
  <div class="row">
    <div class="col-md-12">
      <h3 class="title-inline">Broker Agencies</h3>
    </div>
  </div>

  <div class="row">
    <div class="col-md-12">
    <div class="table-border table-responsive">
      <table class="table">
      <% if @broker_agency_profiles.present? %>
        <thead>
          <th>Legal Name</th>
          <th>dba</th>
          <th>Fein</th>
          <th>Entity Kind</th>
          <th>Market Kind</th>
          <th></th>
        </thead>
        <% @broker_agency_profiles.each do |broker_agency_profile| %>
          <tbody>
            <tr>
              <td>
                <%= link_to broker_agency_profile.legal_name, broker_agencies_profile_path(broker_agency_profile) %><br>
                <%= link_to 'Employee', '#', class: 'show_employee', id: broker_agency_profile.id.to_s %>
              </td>
              <td><%= broker_agency_profile.dba %></td>
              <td><%= broker_agency_profile.fein %></td>
              <td><%= broker_agency_profile.entity_kind.titleize %></td>
              <td><%= broker_agency_profile.market_kind.titleize %></td>
              <td><%= link_to 'Send Secure Message'.html_safe,
              new_broker_agencies_inbox_path(id: broker_agency_profile.id, profile_id: @profile._id), class: "btn btn-default", remote: true %></td>
            </tr>
            <tbody class='employee_<%= broker_agency_profile.id.to_s %>' style='display:none;'>
              <% broker_agency_profile.organization.employer_profile.employee_roles.collect(&:person).each_with_index do |employee, index| %>
                <tr>
                  <td><%= ('<b>E '+index.to_s+':</b>').html_safe %> <%= employee.first_name + employee.last_name %></td>
                  <td><%= employee.gender %></td>
                  <td><%= employee.dob %></td>
                  <td></td>
                  <td></td>
                </tr>
              <% end %>
            </tbody>
          </tbody>
        <% end %>
      <% else %>
        <tr><td>No Broker Agency Profiles found.</td></tr>
      <% end %>
      </table>
    </div>
   </div>
  </div>
</div>